<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#dfdfdf">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/htLogoID" android:layout_centerVertical="true" android:layout_alignParentStart="true"
            android:layout_margin="10dp"/>

    <LinearLayout android:layout_width="240dp"
                  android:layout_height="wrap_content"
                  android:orientation="vertical" android:layout_centerVertical="true"
                  android:layout_toEndOf="@+id/htLogoID" android:id="@+id/linearLayout">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textView4"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView5"/>


    </LinearLayout>

    <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/htRightArrowID"
            android:src="@drawable/arrow_right" android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/linearLayout" android:layout_marginStart="18dp"/>

    <View
            android:layout_width="@dimen/view_width_for_home_tab"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" android:layout_below="@+id/htLogoID"
            android:layout_alignParentEnd="true"/>




</RelativeLayout>