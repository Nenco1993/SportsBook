<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.neven.sportsbooks_v2"
          android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:name="dataFromServer.MyApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="SportsBooks"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".MainActivity"
                android:label="SportsBooks"
                android:screenOrientation="portrait"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".WebViewForSportsBookTab"
                android:label=""
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name=".WebViewForHomeTab"
                android:label="@string/title_activity_web_view_2"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
